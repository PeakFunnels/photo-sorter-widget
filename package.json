{
  "name": "photo-sorter-widget",
  "version": "1.0.0",
  "description": "A modular photo/video sorting widget using the File System Access API.",
  "main": "dist/widget.js",
  "type": "module",
  "scripts": {
    "build:js": "rollup -c",
    "build:css": "copy src\\\\styles.css dist\\\\styles.css",
    "build": "npm run build:js && npm run build:css",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "start": "http-server . -c-1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PeakFunnels/photo-sorter-widget.git"
  },
  "keywords": [
    "file-system",
    "photo-sorter",
    "widget",
    "es-modules",
    "rollup"
  ],
  "author": "Peak Funnels",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/preset-env": "^7.21.0",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "babel-jest": "^29.5.0",
    "http-server": "^14.1.1",
    "jest": "^29.5.0",
    "rollup": "^3.20.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\\\.js$": ["babel-jest", { "configFile": "./babel.config.js" }]
    },
    "moduleFileExtensions": ["js", "json", "cjs"],
    "roots": ["<rootDir>/src"]
  }
}
